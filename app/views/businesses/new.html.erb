<h1>Sign Up</h1>

<%= form_for @business do |f| %>
  <% if @business.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% for message in @business.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <%= f.label :yelp_username %><br />
    <%= f.text_field :yelp_username %>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </p>
  <p class="button"><%= f.submit %></p>
<% end %>